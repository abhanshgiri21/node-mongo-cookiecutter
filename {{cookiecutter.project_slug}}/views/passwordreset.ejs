<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1,minimum-scale=1,maximum-scale=1,width=device-width,height=device-height,user-scalable=yes">

    <title>Password Reset</title>

</head>

<body>

<!-- RESET -->
<form name="resetForm" id="reset-form" onsubmit="return false;">

    <div class="modal-header">
        <h5 class="modal-title">Reset Password</h5>
    </div>

    <div class="modal-body">
        <div class="form-group has-feedback">
            <input class="form-control input-lg" type="password" name="password" placeholder="Enter New Password" required>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-block btn-primary">Reset</button>
    </div>

</form>

<!-- SCRIPTS -->

<!-- JQUERY -->
<script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>


<script>
    $(document).ready(function() {

        $('#reset-form').submit(function() {
            $.post('/api/v1/user' + window.location.pathname, $(this).serialize())
                .done(function(response) {
                    alert('Password reset successful. Please log in to the app.');
                })
                .error(function(response) {
                    if (response.responseJSON.message)
                        alert(response.responseJSON.message);
                });
        });
    });
</script>

</body>
</html>
